<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.apg.library.imagepicker">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".PickerActivity">
            <intent-filter>
                <action android:name="com.apg.library.imagepicker.PICKIMAGE"/>
                <category android:name="com.apg.library.imagepicker"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
